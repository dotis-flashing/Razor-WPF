@page
@model WebRazor.Pages.Manufacture.EditModel

@{
    ViewData["Title"] = "Edit";
    var role = HttpContext.Session.GetString("role");
    var name = HttpContext.Session.GetString("customerId");
}
@if (role == "admin")
{
    <h1>Edit</h1>

    <h4>Manufacturer</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Manufacturer.ManufacturerId" />
                <div class="form-group">
                    <label asp-for="Manufacturer.ManufacturerName" class="control-label"></label>
                    <input asp-for="Manufacturer.ManufacturerName" class="form-control" />
                    <span asp-validation-for="Manufacturer.ManufacturerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Manufacturer.Description" class="control-label"></label>
                    <input asp-for="Manufacturer.Description" class="form-control" />
                    <span asp-validation-for="Manufacturer.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Manufacturer.ManufacturerCountry" class="control-label"></label>
                    <input asp-for="Manufacturer.ManufacturerCountry" class="form-control" />
                    <span asp-validation-for="Manufacturer.ManufacturerCountry" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Manufacturer.ManufacturerStatus" class="control-label"></label>
                    <input asp-for="Manufacturer.ManufacturerStatus" class="form-control" readonly="readonly" />
                    <span asp-validation-for="Manufacturer.ManufacturerStatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
