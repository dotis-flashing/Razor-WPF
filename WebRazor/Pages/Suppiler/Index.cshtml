@page
@model WebRazor.Pages.Suppiler.IndexModel

@{
    ViewData["Title"] = "Index";
    var role = HttpContext.Session.GetString("role");

}
@if (role == "admin")
{
    <h1>Index</h1>

    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Supplier[0].SupplierName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supplier[0].SupplierDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supplier[0].SupplierAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supplier[0].SupplierStatus)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Supplier)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SupplierName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SupplierDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SupplierAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SupplierStatus)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.SupplierId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.SupplierId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.SupplierId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a href="/uirole" class="btn btn-primary">Back</a>
    </div>

}